package sec2;

public class ForEx2 {

	public static void main(String[] args) {
		//for의 무한루프 : 항상 조건이 만족되어 게쏙 끝이 없이 반복수행
		
		int i=0, sum=0;
			for(;;) {
				i++;
				if(i>10) break;
				sum += i;
			}
			System.out.println(sum);
			
			sum=0;
			for(int a=1;;) {
				if(a>10) break;
				sum+= a;
			}
			sum=0;
			for(int b=1;b>0;b++) {
				
			}
	}

}
